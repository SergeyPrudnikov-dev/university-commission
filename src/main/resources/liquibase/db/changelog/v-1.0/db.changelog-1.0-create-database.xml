<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2021-05-06-00" author="Siarhei Prudnikau (siarhei_prudnikau1@epam.com)">
        <comment>Create user admin_uc.</comment>
        <sql>
            CREATE ROLE admin_uc WITH LOGIN ENCRYPTED PASSWORD '12345';
        </sql>
    </changeSet>

    <changeSet id="2021-05-06-01" author="Siarhei" runInTransaction="false">
        <comment>Database uc creation.</comment>
        <sql>
            DROP DATABASE IF EXISTS uc;
            CREATE DATABASE uc WITH OWNER admin_uc;
        </sql>
    </changeSet>
</databaseChangeLog>
