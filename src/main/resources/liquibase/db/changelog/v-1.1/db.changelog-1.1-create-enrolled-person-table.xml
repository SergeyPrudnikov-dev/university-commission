<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2021-05-07-00" author="Siarhei Prudnikau (siarhei_prudnikau1@epam.com)">
        <comment>Create table 'enrolled_person'.</comment>
        <createTable tableName="enrolled_person">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="varchar(75)">
                <constraints nullable="false"/>
            </column>
            <column name="total_score" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="faculty_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="statement_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="faculty"/>
        </rollback>
    </changeSet>

    <changeSet id="2021-05-07-01" author="Siarhei Prudnikau (siarhei_prudnikau1@epam.com)">
        <addUniqueConstraint
                columnNames="id, statement_id"
                tableName="enrolled_person"/>
    </changeSet>

    <changeSet id="2021-05-07-02" author="Siarhei Prudnikau (siarhei_prudnikau1@epam.com)">
        <addAutoIncrement
                columnDataType="bigint"
                columnName="id"
                incrementBy="1"
                startWith="1"
                tableName="enrolled_person"/>
    </changeSet>

    <changeSet id="2021-05-07-03" author="Siarhei Prudnikau (siarhei_prudnikau1@epam.com)">
        <addForeignKeyConstraint
                baseColumnNames="faculty_id"
                baseTableCatalogName="uc"
                baseTableName="enrolled_person"
                baseTableSchemaName="public"
                constraintName="fk_enrolled_person_faculty"
                referencedColumnNames="id"
                referencedTableCatalogName="uc"
                referencedTableName="faculty"
                referencedTableSchemaName="public"/>
    </changeSet>

    <changeSet id="2021-05-12-00" author="Siarhei Prudnikau (siarhei_prudnikau1@epam.com)">
        <addForeignKeyConstraint
                baseColumnNames="statement_id"
                baseTableCatalogName="uc"
                baseTableName="enrolled_person"
                baseTableSchemaName="public"
                constraintName="fk_enrolled_person_statement"
                referencedColumnNames="id"
                referencedTableCatalogName="uc"
                referencedTableName="statement"
                referencedTableSchemaName="public"/>
    </changeSet>
</databaseChangeLog>

